@model LeaveManagementSystemJSE.Models.LeaveRequest

<h2>Leave Request Details</h2>

<div>
    <div><strong>Employee:</strong> @Model.EmployeeName</div>
    <div><strong>Type:</strong> @Model.Type</div>
    <div><strong>Start:</strong> @Model.StartDate.ToShortDateString()</div>
    <div><strong>End:</strong> @Model.EndDate.ToShortDateString()</div>
